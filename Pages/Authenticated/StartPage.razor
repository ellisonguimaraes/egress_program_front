@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(policy: "PersonIdentifierPolicy")]

<PageTitle>Página Inicial</PageTitle>

<AuthorizeView>
    <TitlePageLoggedComponent Name="@GetFirstName(context.User.Identity?.Name!)"/>
</AuthorizeView>

