@using EgressPortal.Models

<div class="d-flex flex-column w-100 justify-content-center align-content-center align-items-center background_color_darkgreen p-3 title_page">
    <MudGrid Class="d-flex flex-row w-100 align-items-center title_page_center">
        <MudItem xs="6" sm="6" md="3" lg="3" Class="d-flex flex-row align-items-center justify-content-center gap-2">
            <MudText Typo="Typo.h5" Class="text_color_white fw-bold">ADMINISTRADOR</MudText>
        </MudItem>
        <MudItem xs="2" sm="2" md="1" lg="1" Class="text-center">
            <MudText Typo="Typo.h2" Class="nav_hidden_link text_color_white">|</MudText>
        </MudItem>
        <MudItem xs="5" sm="5" md="8" lg="8" Class="nav_hidden_link">
            <div class="d-flex flex-row justify-content-around align-items-center">
                <NavLink  class="nav-fill text_color_white" href="@RouteSettings.AdminEgressRoute" ActiveClass="nav_link_active_class" Match="NavLinkMatch.All" >
                    EGRESSOS
                </NavLink>
                <NavLink  class="nav-fill text_color_white" href="@RouteSettings.AdminApprovalPersonRoute" ActiveClass="nav_link_active_class" Match="NavLinkMatch.All" >
                    PESSOAS
                </NavLink>
                <NavLink  class="nav-fill text_color_white" href="@RouteSettings.AdminApprovalTestimonyRoute" ActiveClass="nav_link_active_class" Match="NavLinkMatch.All" >
                    DEPOIMENTOS
                </NavLink>
                <NavLink  class="nav-fill text_color_white" href="@RouteSettings.AdminApprovalHighlightsRoute" ActiveClass="nav_link_active_class" Match="NavLinkMatch.All" >
                    DESTAQUES
                </NavLink>
            </div>
        </MudItem>
        <MudItem xs="4" sm="4" md="8" lg="8" Class="nav_hidden_button">
            <div NavLink="d-flex w-100 justify-content-end">
                <MudMenu Icon="@Icons.Material.Filled.Menu" Size="Size.Large" Color="Color.Surface" Variant="Variant.Text" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopRight">
                    <MudMenuItem Href="@RouteSettings.AdminEgressRoute">Pessoas</MudMenuItem>
                    <MudMenuItem Href="@RouteSettings.AdminApprovalPersonRoute">Aprovação</MudMenuItem>
                    <MudMenuItem Href="@RouteSettings.AdminApprovalTestimonyRoute">Depoimentos</MudMenuItem>
                    <MudMenuItem Href="@RouteSettings.AdminApprovalHighlightsRoute">Destaques</MudMenuItem>
                </MudMenu>
            </div>
        </MudItem>
    </MudGrid>
</div>

